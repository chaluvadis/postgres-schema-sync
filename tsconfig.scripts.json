{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./scripts",
    "rootDir": "./scripts",
    "strict": true,
    "removeComments": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist", "out"]
}