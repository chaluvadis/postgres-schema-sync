{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "src/verify-dotnet-dll.ts",
    "src/build-dotnet.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out"
  ]
}